<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30" height="30" class="d-inline-block align-top" alt="我的餐廳清單">
        我的餐廳清單
      </a>
      <a href="./restaurants/new">
        <button type="button" class="btn btn-warning">新增餐廳</button>
      </a>
    </div>
  </nav>


  <div class="banner"></div>
</header>

<div class="container column">
  <!-- search bar -->
  <div class="container row search-bar mt-300 justify-content-between">
    {{!-- <div class="search-bar-outer"> --}}
    {{!-- <div class="search-bar-inner"> --}}
    <form action="/search">
      {{!-- <h4 class="mb-2">尋找餐廳：</h4> --}}
      <div class="input-group">
        <input type="text" value="{{keyword}}" name="keyword" class="form-control" placeholder="輸入餐廳、分類"
          aria-label="Restaurant Name..." aria-describedby="search-button" style="width: 350px;">
        <div class="input-group-append">
          <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
        </div>
      </div>
    </form>
    {{!-- dropdown --}}
    <div class="dropdown show" style="display: inline;">
      <a class="btn btn-success dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown"
        aria-haspopup="true" aria-expanded="false">
        排序
      </a>

      <div class=" dropdown-menu" aria-labelledby="dropdownMenuLink">
        <a class="dropdown-item" href="#">餐廳名稱(A->Z)</a>
        <a class="dropdown-item" href="#">餐廳名稱(z->A)</a>
        <a class="dropdown-item" href="#">類別</a>
        <a class="dropdown-item" href="#">地區</a>
      </div>
    </div>
    {{!-- </div> --}}
    {{!-- </div> --}}
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <a href="./restaurants/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>

              <div class="button-group col text-right">
                <a href="./restaurants/{{this._id}}/edit" style="text-decoration: none;">
                  <button type="button" class="btn btn-success btn-sm">修改</button>
                </a>
                <form action="./restaurants/{{ this._id }}/delete" method="POST" style="display: inline;">
                  <button type="submit" class="btn btn-danger btn-sm">刪除</button>
                </form>
              </div>
            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>