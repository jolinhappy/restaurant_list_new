<form action="/restaurants" method="POST">
  <div class="form-group">
    <label for="name">餐廳名稱</label>
    <input type="text" class="form-control" placeholder="請輸入餐廳名稱" name="name">
  </div>
  <div class="form-group">
    <label for="category">餐廳類別</label>
    <input type="text" class="form-control" placeholder="請輸入類別" name="category">
  </div>
  <div class="form-group">
    <label for="image">圖片連結</label>
    <input type="text" class="form-control" placeholder="請輸入連結" name="image">
  </div>
  <div class="form-group">
    <label for="location">餐廳地址</label>
    <input type="text" class="form-control" placeholder="請輸入地址" name="location">
  </div>
  <div class="form-group">
    <label for="phone">電話</label>
    <input type="text" class="form-control" placeholder="請輸入類別" name="phone">
  </div>
  <div class="form-group">
    <label for="google_map">GOOGLE地圖</label>
    <input type="text" class="form-control" placeholder="請輸入類別" name="google_map">
  </div>
  <div class="form-group">
    <label for="rating">評價</label>
    <input type="text" class="form-control" placeholder="請輸入類別" name="rating">
  </div>
  <div class="form-group">
    <label for="description">餐廳介紹</label>
    <input type="text" class="form-control" placeholder="請輸入類別" name="description">
  </div>
  <button type="submit" class="btn btn-primary">新增</button>
</form>